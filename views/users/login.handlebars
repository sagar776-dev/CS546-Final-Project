<div class="signup-page">
  <div class="container text-center">
    <h3>Login</h3>
    <form id="login-form" method="POST">

      <div class="form-group">
        <label for="username">Email ID/Username
          <input
            class="form-control"
            type="text"
            id="username"
            value="{{username}}"
            name="username"
          />
        </label>
      </div>

      <div class="form-group">
        <label for="password">Password
          <input
            class="form-control"
            class="form-control"
            type="password"
            id="password"
            value="{{password}}"
            name="password"
          />
        </label>
      </div>

      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>

    <div id="errorDiv" class="error hidden">
      <ul id="errorlist">
      </ul>
    </div>

    <div>
      <a href="/users/signup">Create an account</a>
    </div>
  </div>

  <script src="../../public/js/registration.js"></script>
</div>
<div>
  <link rel="stylesheet" href="/public/css/main.css" />


  <div id="popular-products-div" class="container">
    <h1 class="text-center mb-4">Wishlist</h1>
    {{#if error}}
    <div id="error" class="alert alert-danger" role="alert">
      <p class="col-sm-12" id="error-p">{{error}}</p>
    </div>
    {{/if}}
    {{#if wishlistProducts}}
    <div class="container">
      <div class="row justify-content-center">
        {{#each wishlistProducts}}
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
          <div class="card h-100">
            <img class="card-img-top" src="{{pictures.[0]}}" alt="{{name}}" />
            <div class="card-body d-flex flex-column align-items-center justify-content-between">
              <p class="card-title text-center mb-0">{{name}}</p>
              <a href="/api/products/{{category}}/{{_id}}" class="btn btn-dark mt-auto">View</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{/if}}
  </div>

</div>
<script src="/public/js/userprofile.js"></script>

<div class="form-container">
  <form id="edit-form" class="form-horizontal">
    <div class="row">
      <div class="col-sm-2">
        <label for="username" class="control-label">Username:</label>
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="username" value={{user.username}} readonly>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <label for="email" class="control-label">Email:</label>
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="email" value={{user.email}}>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <label for="firstname" class="control-label">First Name:</label>
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="firstname" value={{user.firstName}}>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <label for="lastname" class="control-label">Last Name:</label>
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="lastname" value={{user.lastName}}>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <label for="gender" class="control-label">Gender:</label>
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="gender" value={{user.gender}} readonly>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <label for="current-password" class="control-label">Current Password:</label>
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="current-password">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <label for="new-password" class="control-label">New Password:</label>
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="new-password">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <label for="confirm-new-password" class="control-label">Confirm New Password:</label>
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="confirm-new-password">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" value="Submit" class="btn btn-dark">
      </div>
    </div>
  </form>
</div>
<article class="product-list">
    {{#if error}}<p>{{error}}</p>{{/if}}
    <ul>
        {{#each categoryList}}
        <li>
            <a href="products/{{this}}">{{this}}</a>
        </li>
        {{/each}}
    </ul>
    <table>
        {{#each productList.results}}
        <tr>
            <td>
                <img src={{ pictures.[0] }} alt="{{name}}" width="100" height="100">
            </td>
            <td>
                <a href="products/{{category}}/{{_id}}">{{name}}</a>
                <p>Price: {{price}}</p>
                <p>Review: {{customerReviewAverage}}</p>
            </td>
        </tr>
        {{/each}}
    </table>
</article>
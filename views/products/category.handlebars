<article class="product-list">
    {{#if error}}<p>{{error}}</p>{{/if}}
    <ul>
        {{#each manufactort_List}}
        <li>
            <form method="POST">
                <input type="submit" name="ManufacturerOfCategoryName" value="{{this}}" />
            </form>
        </li>
        {{/each}}
    </ul>
    <table>
        {{#each product_List}}
        <tr>
            <td>
                <img src={{ pictures.[0] }} alt={{name}} width="100" height="100">
            </td>
            <td>
                <a href="{{category}}/{{_id}}">{{name}}</a>
                <p>Price: {{price}}</p>
                <p>Review: {{customerReviewAverage}}</p>
            </td>
        </tr>
        {{/each}}
    </table>
</article>
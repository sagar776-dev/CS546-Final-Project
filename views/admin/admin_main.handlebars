<article>
    <form id="find-form" action="/api/admin" method="get">
        <div class=" find-group">
            <label for="findSKU">Find Product by ID
                <input class="form-control" type="text" id="findSKU" name="findSKU" />
            </label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Find Product</button>
        </div>
    </form>
</article>

{{#if product}}
<div class="form-group">
    <form action="admin/{{product._id}}" method="POST">
        <input type="hidden" name="sku" value={{product._id}}>
        <button type="submit" class="btn btn-primary">Delete Product</button>
    </form>
</div>
<div class="form-group">
    <button type="submit" class="btn btn-primary">Update Product</button>
</div>
<div>
    {{#if error}}<p>{{error}}</p>{{/if}}
    <p>id: {{product._id}}</p>
    <p>name: {{product.name}}</p>
    <p>picures:</p>
    {{#each pictures}}
    {{!-- Need to fix alt to name --}}
    <img src={{ this }} alt={{ this }} width="300" height="250">
    {{/each}}
    <p>customerReviewAverage: {{product.customerReviewAverage}}</p>
    <p>customerReviewCount: {{product.customerReviewCount}}</p>
    <p>manufacturer: {{product.manufacturer}}</p>
    <p>startDate: {{product.startDate}}</p>
    <p>price: {{product.price}}</p>
    <p>url: <a href={{product.url}}>{{product.url}}</a></p>
    <p>inStoreAvailability: {{product.inStoreAvailability}}</p>
    <p>Description: {{product.Description}}</p>
    <p>details: </p>
    <table>
        <tr>
            <th>Name</th>
            <th>Spec</th>
        </tr>
        {{#each details}}
        <tr>
            <td>{{name}}</td>
            <td>{{value}}</td>
        </tr>
        {{/each}}
    </table>
</div>
{{/if}}

{{#if error}}
<p>{{error}}</p>
{{/if}}

<script src="/public/js/admin.js"></script>